<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://camel.apache.org/schema/spring
       http://camel.apache.org/schema/spring/camel-spring.xsd">


    <camelContext id="preAuthCamelContext" xmlns="http://camel.apache.org/schema/spring">

        <propertyPlaceholder id="propertyPlaceHolder">
            <propertiesLocation resolver="classpath" path="application.properties"/>
        </propertyPlaceholder>

        <endpoint uri="seda:preAuth?multipleConsumers=true" id="camel.preAuth"/>

        <route>
            <from uri="camel.preAuth"/>
            <log message="${body}"/>
        </route>

    </camelContext>

</beans>
